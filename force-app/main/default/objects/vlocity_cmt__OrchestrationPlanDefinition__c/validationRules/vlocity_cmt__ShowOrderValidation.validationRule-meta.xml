<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>vlocity_cmt__ShowOrderValidation</fullName>
    <active>true</active>
    <description>Disallow negative values for show order field</description>
    <errorConditionFormula>vlocity_cmt__ShowOrder__c &lt; 0</errorConditionFormula>
    <errorDisplayField>vlocity_cmt__ShowOrder__c</errorDisplayField>
    <errorMessage>Show Order cannot be less than zero.</errorMessage>
</ValidationRule>
